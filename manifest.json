{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "右键分享到微博",
  "version": "0.1",
  "manifest_version": 2,
  "description": "分享当前网页内容（图片或选中文本）到微博",
  "icons": {
    "16": "icons/16.png",
    "128": "icons/128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": ["contextMenus"]
}
