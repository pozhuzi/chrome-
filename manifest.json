{
    "manifest_version": 2,
    "name": "分享到微博",
    "version": "2.0",
    "description": "分享文字或者图片到微博",

    "browser_action":{
    "default_icon":"images/icon48.png"
   },
   
   "background": {
        "scripts": ["background.js"]
    },
	
    "icons": {
        "16": "images/icon16.png",
		"48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    
    "permissions": ["contextMenus"]
}